@page "/Goal"
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationState
@inject IGoalService GoalService
@inject IResolutionService ResolutionService

<form>
    <div class="input-box">
        <input placeholder="Name" @bind="_name"/>
        <input placeholder="Description" @bind="_description"/>
        <input placeholder="Deadline" type="date" @bind="endDate"/>
        <ResolutionSelector @bind-Resolution="_resolution" @bind-Resolution:event="ResolutionChanged"></ResolutionSelector>
        <button class="btn-sign" @onclick="CreateNewGoal">Create</button>
    </div>
</form>

@code {
    
    private Resolution? _resolution { get; set; }

    private string _name { get; set; } = string.Empty;
    private string _description { get; set; } = string.Empty;
    private DateTime endDate { get; set; } = DateTime.Now.Date;

    private void CreateNewGoal()
    {
        GoalService.Create(_resolution!, _name, _description, endDate);
    }
}
